{
  "name": "myjobplanner-api",
  "version": "1.0.0",
  "description": "",
  "main": "build/src/server.js",
  "scripts": {
    "build": "tsc --project ./",
    "dev": "nodemon -r dotenv/config src/server.ts",
    "start": "node build/src/server.js",
    "test": "LOG_LEVEL=info SKIP_JWT_VERIFICATION=true jest",
    "graphile-watch": "npx env-cmd --no-override graphile-migrate watch",
    "graphile-migrate": "npx env-cmd --no-override graphile-migrate migrate",
    "graphile-commit": "npx env-cmd --no-override graphile-migrate commit",
    "zapatos": "npx env-cmd --no-override npx zapatos",
    "skaffold": "skaffold dev --tail --port-forward",
    "openapi-types": "npx openapi-typescript http://myjobplanner-api.default.10.98.41.24.sslip.io/schema.json --export-type --output src/schema.ts",
    "test-integration": "SKIP_JWT_VERIFICATION=true jest --config jest.integration.config.ts",
    "test-integration-local": "npm run postgresql && npm run wait-for-postgres && npm run graphile-migrate && npm run test-integration ; npm run stop-postgresql",
    "postgresql": "docker run --rm --name integration-test-myjobplanner-postgres -e POSTGRES_USER=myjobplanner -e POSTGRES_PASSWORD=myjobplanner -e POSTGRES_DB=myjobplanner -p 5432:5432 -d postgres",
    "stop-postgresql": "docker stop integration-test-myjobplanner-postgres",
    "wait-for-postgres": "timeout 90s bash -c 'until docker exec integration-test-myjobplanner-postgres pg_isready ; do sleep 5 ; done'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bunyan": "^1.8.15",
    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "express-jwt-authz": "^2.4.1",
    "express-openapi-validator": "^4.13.2",
    "jwks-rsa": "^2.0.4",
    "pg": "^8.7.1",
    "swagger-ui-express": "^4.1.6",
    "typed-inject": "^3.0.1",
    "uuid": "^8.3.2",
    "zapatos": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@jest/types": "^27.1.1",
    "@types/bunyan": "^1.8.8",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.7.4",
    "@types/pg": "^8.6.1",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.14.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "install": "^0.13.0",
    "jest": "^27.2.1",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.6.3"
  }
}
